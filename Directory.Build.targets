<Project>
    <ItemGroup Condition="$(IsPackable) == 'true'">
        <None Include="..\..\LICENSE.md; ..\..\README.md">
            <Pack>true</Pack>
            <PackagePath>%(Filename)%(Extension)</PackagePath>
            <Visible>true</Visible>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" />
        <PackageReference Include="Nerdbank.GitVersioning" />
        <PackageReference Include="StyleCop.Analyzers" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Update="Microsoft.CodeAnalysis.FxCopAnalyzers">
            <Version>3.3.0</Version>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Update="Microsoft.Extensions.Hosting">
            <Version>5.0.0-rc.1.20451.14</Version>
        </PackageReference>
        <PackageReference Update="Microsoft.SourceLink.GitHub">
            <Version>1.1.0-beta-20204-02</Version>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Update="Mono.Posix.NETStandard">
            <Version>5.20.1-preview</Version>
        </PackageReference>
        <PackageReference Update="Nerdbank.GitVersioning">
            <Version>3.2.31</Version>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Update="StyleCop.Analyzers">
            <Version>1.2.0-beta.205</Version>
            <PrivateAssets>all</PrivateAssets>
        </PackageReference>
        <PackageReference Update="Vanara.PInvoke.Kernel32">
            <Version>3.2.17</Version>
        </PackageReference>
    </ItemGroup>
</Project>
