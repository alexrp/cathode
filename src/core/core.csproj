<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>Terminal</AssemblyName>
        <IsPackable>true</IsPackable>
        <PackageDescription>$(PackageDescription)

This package provides the core terminal API.</PackageDescription>
        <RootNamespace>System</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <Using Include="System.Drivers" />
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Terminal.Extensions" />
    </ItemGroup>

    <ItemGroup>
        <None Include="buildTransitive/**"
              Pack="true"
              PackagePath="%(Identity)" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.BannedApiAnalyzers"
                          PrivateAssets="none" />
        <PackageReference Include="Microsoft.Windows.CsWin32" />
        <PackageReference Include="Microsoft.Windows.SDK.Win32Docs" />
        <PackageReference Include="Microsoft.Windows.SDK.Win32Metadata" />
        <PackageReference Include="Mono.Unix" />
        <PackageReference Include="TermInfo" />
        <PackageReference Include="Wcwidth" />
    </ItemGroup>
</Project>
